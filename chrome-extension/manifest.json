{
  "manifest_version": 3,
  "name": "Zenith",
  "version": "1.0",
  "description": "An extension help user can add word into their flashcard",
  "permissions": ["contextMenus", "activeTab", "scripting", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
